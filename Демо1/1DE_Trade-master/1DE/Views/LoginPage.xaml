<Page x:Class="_1DE.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1DE.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация пользователя">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Войти в систему" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Логин" Margin="10"/>
            <TextBox x:Name="loginTB" Width="120" ToolTip="Введите ваш логин" Margin="10"/>
            <TextBlock Text="Пароль" Margin="10"/>
            <TextBox x:Name="passwordTB" Width="120" ToolTip="Введите ваш пароль" Margin="10"/>
            <Button x:Name="loginBT" Content="Войти" Width="150" Margin="10" Click="loginBT_Click"/>
            <Button x:Name="adminBT" Content="Войти как администратор" Width="150" Margin="20" Click="adminBT_Click"/>
            <Button x:Name="managerBT" Content="Войти как менеджер" Width="150" Margin="20" Click="managerBT_Click"/>
        </StackPanel>
    </Grid>
</Page>
