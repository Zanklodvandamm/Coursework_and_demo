<Window x:Class="DemoVar9.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoVar9"
        mc:Ignorable="d"
        Title="Добавление товара" Icon="icon.ico" Height="450" Width="800" MinHeight="450">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="375*"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Height="30" Width="200">
            <TextBlock FontSize="20">Добавление товара</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>ID</TextBlock>
            <TextBox x:Name="IdTB"></TextBox>
            <TextBlock>Название</TextBlock>
            <TextBox x:Name="nameTB"></TextBox>
            <TextBlock>Цена</TextBlock>
            <TextBox x:Name="costTB"></TextBox>
            <TextBlock>Максимальная скидка</TextBlock>
            <TextBox x:Name="maxDiscountTB"></TextBox>
            <TextBlock>Производитель</TextBlock>
            <TextBox x:Name="manufacturerCB"></TextBox>
            <TextBlock>Поставщик</TextBlock>
            <TextBox x:Name="supplierCB"></TextBox>
            <TextBlock>Категория</TextBlock>
            <TextBox x:Name="categoryCB" ></TextBox>
            <TextBlock>Текущая скидка</TextBlock>
            <TextBox x:Name="currentDiscountTB"></TextBox>
            <TextBlock>Количество</TextBlock>
            <TextBox x:Name="quantityTB"></TextBox>
            <TextBlock>Описание</TextBlock>
            <TextBox x:Name="descriptionTB"></TextBox>
            <TextBlock>Изображения</TextBlock>
            <TextBox x:Name="imageTB"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Width="300" Height="30" Orientation="Horizontal">
            <Button x:Name="addProductBtn" Width="150" Height="30"  Background="#FF498C51" Click="addProductBtn_Click">Добавить</Button>
            <Button x:Name="backBtn" Width="150" Height="30" Background="#FF498C51">Назад</Button>
        </StackPanel>
    </Grid>
</Window>
