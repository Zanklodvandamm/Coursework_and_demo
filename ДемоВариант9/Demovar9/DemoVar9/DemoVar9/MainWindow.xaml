<Window x:Class="DemoVar9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoVar9"
        mc:Ignorable="d"
        Title="Главная" Icon="icon.ico" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="188*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Width="700" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="logo.png" Height="50" Width="50" Stretch="Fill"></Image>
                <TextBlock FontSize="20" Height="30">ООО «Цветы»</TextBlock>
            </StackPanel>
            <StackPanel Margin="200,0,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" Height="50" Click="Button_Click" >Добавить товар</Button>
            </StackPanel>
           
        </StackPanel>
        <Frame x:Name="myFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
