<Page x:Class="DemoWPF.AddPartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoWPF"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="Добавление нового партнёра">

    <Grid Background="White">
        <!-- StackPanel для размещения всех элементов по центру -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Margin="20">
                <!-- Заголовок -->
                <TextBlock Text="Добавление нового партнера" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Поля для ввода данных -->
                <TextBlock Text="Тип партнера:" />
                <TextBox x:Name="TbPartnerType" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Название партнера:" />
                <TextBox x:Name="TbPartnerName" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Фамилия:" />
                <TextBox x:Name="TbSurname" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Имя:" />
                <TextBox x:Name="TbName" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Отчество:" />
                <TextBox x:Name="TbPatronymic" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Email:" />
                <TextBox x:Name="TbEmail" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Телефон:" />
                <TextBox x:Name="TbPhone" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Почтовый индекс:" />
                <TextBox x:Name="TbPostCode" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Регион:" />
                <TextBox x:Name="TbRegion" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Город:" />
                <TextBox x:Name="TbCity" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Улица:" />
                <TextBox x:Name="TbStreet" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Дом:" />
                <TextBox x:Name="TbHouse" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="ИНН:" />
                <TextBox x:Name="TbInn" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Рейтинг:" />
                <TextBox x:Name="TbRating" Margin="0,0,0,20" Background="#F4E8D3"/>

                <!-- Кнопки для сохранения и отмены -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnSave" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="BtnSave_Click" Background="#67BA80"/>
                    <Button x:Name="BtnCancel" Content="Назад" Width="100" Click="BtnCancel_Click" Background="#67BA80"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>