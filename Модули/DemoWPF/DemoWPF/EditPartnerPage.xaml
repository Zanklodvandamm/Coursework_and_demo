<Page x:Class="DemoWPF.EditPartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoWPF"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="Редактирование данных партнёра">

    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Margin="20">
                <TextBlock Text="Редактирование партнера" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

                <TextBlock Text="Тип партнера:" />
                <TextBox x:Name="TbPartnerType" Text="{Binding PartnerType}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Название партнера:" />
                <TextBox x:Name="TbPartnerName" Text="{Binding PartnerName}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Фамилия:" />
                <TextBox x:Name="TbSurname" Text="{Binding Surname}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Имя:" />
                <TextBox x:Name="TbName" Text="{Binding Name}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Отчество:" />
                <TextBox x:Name="TbPatronymic" Text="{Binding Patronymic}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Email:" />
                <TextBox x:Name="TbEmail" Text="{Binding Email}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Телефон:" />
                <TextBox x:Name="TbPhone" Text="{Binding Phone}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Почтовый индекс:" />
                <TextBox x:Name="TbPostCode" Text="{Binding PostCode}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Регион:" />
                <TextBox x:Name="TbRegion" Text="{Binding Region}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Город:" />
                <TextBox x:Name="TbCity" Text="{Binding City}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Улица:" />
                <TextBox x:Name="TbStreet" Text="{Binding Street}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Дом:" />
                <TextBox x:Name="TbHouse" Text="{Binding House}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="ИНН:" />
                <TextBox x:Name="TbInn" Text="{Binding Inn}" Margin="0,0,0,10" Background="#F4E8D3"/>

                <TextBlock Text="Рейтинг:" />
                <TextBox x:Name="TbRating" Text="{Binding Rating}" Margin="0,0,0,20" Background="#F4E8D3"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnSave" Content="Сохранить" Width="100" Margin="0,0,10,0" Click="BtnSave_Click" Background="#67BA80"/>
                    <Button x:Name="BtnCancel" Content="Назад" Width="100" Click="BtnCancel_Click" Background="#67BA80"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>